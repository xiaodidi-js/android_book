<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itcast.wechat"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:icon="@drawable/defalt_head"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.itcast.wechat.MeActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.itcast.loading.LoadingActivity"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itcast.wechat.LoginActivity"
            android:noHistory="true" />
        
        <activity
            android:name="com.itcast.wechat.RegActivity"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".SearchActivity"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.itcast.wechat.ContactActivity"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.itcast.wechat.MessageActivity"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.itcase.web.AboutActivity"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".DeleteActivity"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".UpdateActivity"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.itcast.wechat.CallMessage"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="com.itcast.wechat.SmsActivity"
            android:noHistory="true" >
        </activity>
    </application>

</manifest>